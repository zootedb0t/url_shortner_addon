{
  "description": "Shorten url using bitly api.",
  "manifest_version": 3,
  "name": "URL Shortner",
  "version": "1.0",
  "homepage_url": "https://github.com/zootedb0t/url_shortner_addon",

  "icons": {
    "48": "icon.svg"
  },

  //  "background": {
  //    "scripts": ["scripts.js"]
  //  },

  //"browser_specific_settings": {
  //  "gecko": {
  //    "id": "urlshortner@protonmail.com",
  //    "strict_min_version": "42.0"
  //  }
  //},

  "browser_specific_settings": {
    "gecko": {
      "id": "urlshortner@protonmail.com",
      "strict_min_version": "42.0"
    }
  },

  "action": {
    "default_icon": "icon.svg",
    "browser_style": true,
    "default_title": "URL Shortner",
    "default_popup": "index.html"
  },

  "options_ui": {
    "page": "option/options.html",
    "browser_style": true
  },

  "permissions": ["webRequest", "webRequestBlocking", "storage", "tabs"]
}
