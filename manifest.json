{
  "description": "Shorten url using bitly api.",
  "manifest_version": 3,
  "name": "URL Shortner",
  "version": "1.0",
  "homepage_url": "https://github.com/zootedb0t/url_shortner_addon",

  "icons": {
    "48": "icon.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "urlshortner@protonmail.com",
      "strict_min_version": "42.0"
    }
  },

  "background": {
    "scripts": ["scripts.js"]
  },

  "permissions": ["webRequest", "storage", "tabs"],

  "options_ui": {
    "page": "option/options.html",
    "browser_style": true
  }
}
